        function renderItinerary(container) {
            const tabsHtml = tripData.itinerary.map((day, index) => `
                <button onclick="setActiveDay(${index})" class="flex-shrink-0 w-24 sm:w-auto flex-1 py-4 text-center border-b-2 text-sm font-medium transition-colors duration-200 ${index === activeDayIndex ? 'active-tab' : 'border-transparent text-gray-500 hover:text-gray-700 bg-white'}">
                    <div class="font-bold text-base mb-1">${day.day}</div>
                    <div class="text-xs opacity-80">${day.date.split(',')[0]}</div>
                </button>
            `).join('');

            const activeDay = tripData.itinerary[activeDayIndex];

            const filteredEvents = activeFilter === 'all' 
                ? activeDay.events 
                : activeDay.events.filter(e => e.type === activeFilter);

            const eventsHtml = filteredEvents.length > 0 ? filteredEvents.map((event, idx) => {
                let icon = 'üìç';
                let colorClass = 'bg-gray-100 text-gray-600';
                if(event.type === 'food') { icon = 'üçú'; colorClass = 'bg-orange-100 text-orange-600'; }
                if(event.type === 'transport') { icon = 'üöá'; colorClass = 'bg-blue-100 text-blue-600'; }
                if(event.type === 'shopping') { icon = 'üõçÔ∏è'; colorClass = 'bg-emerald-100 text-emerald-600'; }
                if(event.type === 'logistics') { icon = 'üè®'; colorClass = 'bg-purple-100 text-purple-600'; }
                if(event.type === 'activity') { icon = 'üì∑'; colorClass = 'bg-pink-100 text-pink-600'; }

                const eventTimeVal = parseInt(event.time.replace(':', ''));
                const sunriseVal = parseInt(activeDay.sunrise.replace(':', ''));
                const sunsetVal = parseInt(activeDay.sunset.replace(':', ''));
                let timeIcon = '';
                if (eventTimeVal < sunriseVal) timeIcon = 'üåô'; 
                else if (eventTimeVal < sunriseVal + 100) timeIcon = 'üåÖ'; 
                else if (eventTimeVal > sunsetVal + 100) timeIcon = 'üåÉ'; 
                else if (eventTimeVal > sunsetVal - 50) timeIcon = 'üåá'; 
                else timeIcon = '‚òÄÔ∏è'; 

                return `
                <div class="relative pl-8 sm:pl-12 py-4 group">
                    <div class="sky-timeline"></div>
                    
                    <div class="absolute left-6 sm:left-10 top-6 transform -translate-x-1/2 z-10 flex flex-col items-center">
                        <div class="h-3 w-3 rounded-full border-2 border-white shadow-sm ${event.title.includes('RESERVATION') ? 'bg-red-500 animate-pulse' : 'bg-white'}"></div>
                        <div class="mt-1 text-[10px] leading-none text-gray-400 select-none">${timeIcon}</div>
                    </div>
                    
                    <div class="bg-white rounded-xl card-shadow border border-gray-100 hover:border-red-200 transition-all overflow-hidden">
                        <div class="p-4 sm:p-5 cursor-pointer" onclick="toggleDetails('evt-${idx}')">
                            <div class="flex items-start">
                                <div class="flex-shrink-0 mr-4">
                                    <span class="inline-flex items-center justify-center h-12 w-12 rounded-xl ${colorClass} text-xl shadow-sm">
                                        ${icon}
                                    </span>
                                </div>
                                <div class="flex-grow">
                                    <div class="flex flex-wrap justify-between items-start">
                                        <h3 class="text-lg font-bold text-gray-900 leading-tight mr-2">${event.title}</h3>
                                        <div class="flex items-center mt-1 sm:mt-0 space-x-2">
                                            ${event.transport_badge ? `<span class="text-[10px] font-bold uppercase tracking-wider px-2 py-0.5 rounded-full ${event.transport_badge.class}">${event.transport_badge.name}</span>` : ''}
                                            <span class="text-sm font-mono font-bold text-gray-500 bg-gray-50 px-2 py-1 rounded border border-gray-200">${event.time}</span>
                                        </div>
                                    </div>
                                    
                                    ${event.station_exit ? `
                                        <div class="mt-1 flex items-center text-xs font-bold text-gray-500">
                                            <svg class="w-3 h-3 mr-1 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path></svg>
                                            Exit: ${event.station_exit}
                                        </div>
                                    ` : ''}
                                    
                                    <div class="flex items-center mt-2 space-x-2">
                                         ${event.indoor ? 
                                            `<span class="text-[10px] font-bold uppercase tracking-wider bg-gray-100 text-gray-600 px-2 py-0.5 rounded-full">Indoor</span>` : 
                                            `<span class="text-[10px] font-bold uppercase tracking-wider bg-blue-50 text-blue-600 px-2 py-0.5 rounded-full">Outdoor</span>`
                                         }
                                         ${event.cost ? `<span class="text-[10px] font-bold uppercase tracking-wider bg-green-50 text-green-700 px-2 py-0.5 rounded-full">${event.cost}</span>` : ''}
                                    </div>
                                </div>
                                <div class="ml-2 flex-shrink-0 self-center">
                                    <svg id="chevron-evt-${idx}" class="w-5 h-5 text-gray-400 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg>
                                </div>
                            </div>
                             <p class="text-sm text-gray-600 mt-3 line-clamp-2">${event.location_overview}</p>
                        </div>

                        <div id="details-evt-${idx}" class="details-content bg-gray-50 border-t border-gray-100">
                            <div class="p-5 space-y-4">
                                <div class="bg-white p-3 rounded-lg border border-gray-200 shadow-sm">
                                    <h4 class="text-xs font-bold text-blue-500 uppercase tracking-wide mb-1 flex items-center">
                                        <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path></svg>
                                        Navigating There
                                    </h4>
                                    <p class="text-sm text-gray-700">${event.transport_detail}</p>
                                    
                                    ${event.train_strategy ? `
                                    <div class="mt-3 pt-3 border-t border-gray-100">
                                        <h5 class="text-[10px] font-bold text-gray-400 uppercase tracking-wider mb-1">Transit Strategy</h5>
                                        <p class="text-xs text-gray-600 italic bg-blue-50 p-2 rounded border border-blue-100">${event.train_strategy}</p>
                                    </div>
                                    ` : ''}
                                </div>

                                ${event.pro_tips ? `
                                <div class="flex items-start">
                                    <span class="flex-shrink-0 h-5 w-5 rounded-full bg-amber-100 text-amber-600 flex items-center justify-center text-xs font-bold mr-2">!</span>
                                    <div>
                                        <h4 class="text-xs font-bold text-gray-900 uppercase tracking-wide mb-0.5">Pro Tip</h4>
                                        <p class="text-sm text-gray-600">${event.pro_tips}</p>
                                    </div>
                                </div>` : ''}

                                ${event.what_to_expect ? `
                                <div class="flex items-start">
                                    <span class="flex-shrink-0 h-5 w-5 rounded-full bg-purple-100 text-purple-600 flex items-center justify-center text-xs font-bold mr-2">?</span>
                                    <div>
                                        <h4 class="text-xs font-bold text-gray-900 uppercase tracking-wide mb-0.5">Vibe Check</h4>
                                        <p class="text-sm text-gray-600">${event.what_to_expect}</p>
                                    </div>
                                </div>` : ''}

                                <div class="flex space-x-2 pt-2">
                                    <button class="flex-1 py-2 bg-white border border-gray-300 rounded text-xs font-bold text-gray-600 hover:bg-gray-50 shadow-sm">Copy Address</button>
                                    <button class="flex-1 py-2 bg-white border border-gray-300 rounded text-xs font-bold text-gray-600 hover:bg-gray-50 shadow-sm">Show Map</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                `;
            }).join('') : `<div class="p-8 text-center text-gray-500 italic">No events found for this filter.</div>`;

            container.innerHTML = `
                <div class="mb-6 flex flex-col sm:flex-row sm:items-end justify-between">
                    <div>
                        <h2 class="text-2xl font-bold text-gray-900">Detailed Itinerary</h2>
                        <div class="flex items-center text-sm text-gray-500 mt-1">
                            <span class="mr-3">üåÖ Sunrise: ${activeDay.sunrise}</span>
                            <span>üåá Sunset: ${activeDay.sunset}</span>
                        </div>
                    </div>
                    <div class="mt-4 sm:mt-0 flex space-x-1 bg-gray-100 p-1 rounded-lg">
                        <button onclick="setFilter('all')" class="px-3 py-1 rounded-md text-xs font-bold transition ${activeFilter === 'all' ? 'bg-white text-gray-900 shadow-sm' : 'text-gray-500 hover:text-gray-700'}">All</button>
                        <button onclick="setFilter('food')" class="px-3 py-1 rounded-md text-xs font-bold transition ${activeFilter === 'food' ? 'bg-white text-orange-600 shadow-sm' : 'text-gray-500 hover:text-gray-700'}">Food</button>
                        <button onclick="setFilter('activity')" class="px-3 py-1 rounded-md text-xs font-bold transition ${activeFilter === 'activity' ? 'bg-white text-pink-600 shadow-sm' : 'text-gray-500 hover:text-gray-700'}">See</button>
                        <button onclick="setFilter('transport')" class="px-3 py-1 rounded-md text-xs font-bold transition ${activeFilter === 'transport' ? 'bg-white text-blue-600 shadow-sm' : 'text-gray-500 hover:text-gray-700'}">Go</button>
                    </div>
                </div>

                <div class="bg-white rounded-lg shadow-sm overflow-hidden mb-6 sticky top-16 z-40 border-b border-gray-200">
                    <div class="flex overflow-x-auto hide-scrollbar">
                        ${tabsHtml}
                    </div>
                </div>

                <div class="pb-12">
                    ${eventsHtml}
                </div>
            `;
        }

        function renderBudget(container) {
            container.innerHTML = `
                <div class="mb-6">
                    <h2 class="text-2xl font-bold text-gray-900">Budget Breakdown</h2>
                    <p class="text-gray-600">Total Estimated: <span class="font-bold">¬•${tripData.budget.totalEstimated.toLocaleString()}</span> (Approx S$800)</p>
                </div>

                <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
                    <!-- Chart Section -->
                    <div class="bg-white p-6 rounded-xl card-shadow flex flex-col items-center">
                        <h3 class="text-lg font-semibold mb-4 w-full text-left">Spending by Category</h3>
                        <div class="chart-container">
                            <canvas id="budgetChart"></canvas>
                        </div>
                    </div>

                    <!-- Details Section -->
                    <div class="bg-white p-6 rounded-xl card-shadow">
                        <h3 class="text-lg font-semibold mb-4">Expense Details</h3>
                        <div class="overflow-x-auto">
                            <table class="min-w-full divide-y divide-gray-200">
                                <thead class="bg-gray-50">
                                    <tr>
                                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Category</th>
                                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Amount (JPY)</th>
                                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">%</th>
                                    </tr>
                                </thead>
                                <tbody class="bg-white divide-y divide-gray-200">
                                    ${tripData.budget.breakdown.map(item => {
                                        const pct = Math.round((item.amount / tripData.budget.totalEstimated) * 100);
                                        return `
                                        <tr>
                                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900 flex items-center">
                                                <span class="h-3 w-3 rounded-full mr-2" style="background-color: ${item.color}"></span>
                                                ${item.category}
                                            </td>
                                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 text-right">¬•${item.amount.toLocaleString()}</td>
                                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 text-right">${pct}%</td>
                                        </tr>
                                        `;
                                    }).join('')}
                                     <tr class="bg-green-50">
                                        <td class="px-6 py-4 whitespace-nowrap text-sm font-bold text-green-800">Surplus / Safety</td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-green-800 font-bold text-right">¬•${tripData.budget.surplus.toLocaleString()}</td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-green-800 text-right">-</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="mt-4 p-4 bg-yellow-50 text-yellow-800 text-sm rounded border border-yellow-200">
                            <strong>Note:</strong> Budget excludes flights and accommodation. Approx ¬•22,000 buffer remains for shopping or emergencies.
                        </div>
                    </div>
                </div>
            `;

            // Initialize Chart
            setTimeout(() => {
                const ctx = document.getElementById('budgetChart').getContext('2d');
                new Chart(ctx, {
                    type: 'doughnut',
                    data: {
                        labels: tripData.budget.breakdown.map(b => b.category),
                        datasets: [{
                            data: tripData.budget.breakdown.map(b => b.amount),
                            backgroundColor: tripData.budget.breakdown.map(b => b.color),
                            borderWidth: 0
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: { position: 'bottom', labels: { usePointStyle: true, padding: 20 } }
                        }
                    }
                });
            }, 100);
        }

        function renderChecklist(container) {
            container.innerHTML = `
                <div class="mb-6">
                    <h2 class="text-2xl font-bold text-gray-900">Pre-Trip Checklist</h2>
                    <p class="text-gray-600">Essential items to secure before departure.</p>
                </div>

                <div class="bg-white rounded-xl card-shadow overflow-hidden">
                    <div class="p-6 space-y-4">
                        ${tripData.checklist.map(item => `
                            <div class="flex items-center p-4 bg-gray-50 hover:bg-gray-100 rounded-lg transition border border-transparent hover:border-gray-200 cursor-pointer" onclick="toggleCheck('${item.id}')">
                                <div class="flex-shrink-0 h-6 w-6 flex items-center justify-center">
                                    <input type="checkbox" ${item.done ? 'checked' : ''} class="h-5 w-5 text-red-600 focus:ring-red-500 border-gray-300 rounded pointer-events-none">
                                </div>
                                <div class="ml-4 flex-grow">
                                    <span class="text-base text-gray-900 font-medium ${item.done ? 'line-through text-gray-400' : ''}">${item.text}</span>
                                </div>
                            </div>
                        `).join('')}
                    </div>
                    <div class="bg-gray-50 px-6 py-6 border-t border-gray-200">
                        <h3 class="text-sm font-bold text-gray-900 uppercase tracking-wide mb-4">Pack for February</h3>
                        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                            <div class="bg-white p-3 rounded text-center text-sm text-gray-600 border border-gray-100">üß• HeatTech</div>
                            <div class="bg-white p-3 rounded text-center text-sm text-gray-600 border border-gray-100">üß£ Scarf/Gloves</div>
                            <div class="bg-white p-3 rounded text-center text-sm text-gray-600 border border-gray-100">üîã Power Bank</div>
                            <div class="bg-white p-3 rounded text-center text-sm text-gray-600 border border-gray-100">üëü Walking Shoes</div>
                        </div>
                    </div>
                </div>
            `;
        }

        function setActiveDay(index) {
            activeDayIndex = index;
            // Reset filter when changing days to ensure content is visible
            activeFilter = 'all';
            renderItinerary(document.getElementById('main-content'));
        }
        
        function setFilter(filter) {
            activeFilter = filter;
            renderItinerary(document.getElementById('main-content'));
        }

        function toggleCheck(id) {
            const item = tripData.checklist.find(i => i.id === id);
            if (item) {
                item.done = !item.done;
                const doneMap = {};
                tripData.checklist.forEach(i => doneMap[i.id] = i.done);
                localStorage.setItem('tokyoChecklist', JSON.stringify(doneMap));
                renderView(); 
            }
        }
        
        function toggleDetails(id) {
            const content = document.getElementById(`details-${id}`);
            const chevron = document.getElementById(`chevron-${id}`);
            
            if (content.classList.contains('details-expanded')) {
                content.classList.remove('details-expanded');
                chevron.classList.remove('rotate-chevron');
            } else {
                content.classList.add('details-expanded');
                chevron.classList.add('rotate-chevron');
            }
        }

        // Start
        init();

    </script>
</body>
</html>
