        let currentView = 'dashboard';
        let activeDayIndex = 0;
        let activeFilter = 'all';

        // --- Core Functions ---

        function init() {
            renderNav();
            renderTools();
            renderView();
            // Load checklist state
            const savedChecklist = localStorage.getItem('tokyoChecklist');
            if (savedChecklist) {
                const parsed = JSON.parse(savedChecklist);
                tripData.checklist.forEach(item => {
                    if (parsed[item.id]) item.done = true;
                });
            }
        }

        function setView(view) {
            currentView = view;
            renderNav();
            renderView();
            window.scrollTo(0,0);
        }
        
        function toggleTools() {
            const el = document.getElementById('tools-panel');
            el.classList.toggle('hidden');
        }

        function showCard(index) {
            const card = tripData.commCards[index];
            document.getElementById('card-en').textContent = card.en;
            document.getElementById('card-jp').textContent = card.jp;
            document.getElementById('card-kana').textContent = card.kana;
            document.getElementById('comm-card-overlay').classList.remove('hidden');
            toggleTools(); // Close sidebar
        }

        function hideCard() {
            document.getElementById('comm-card-overlay').classList.add('hidden');
        }

        function renderNav() {
            const views = [
                { id: 'dashboard', label: 'Dashboard' },
                { id: 'itinerary', label: 'Itinerary' },
                { id: 'budget', label: 'Budget' },
                { id: 'checklist', label: 'Checklist' }
            ];

            const desktopContainer = document.getElementById('desktop-nav');
            const mobileContainer = document.getElementById('mobile-nav');
            
            desktopContainer.innerHTML = views.map(v => `
                <button onclick="setView('${v.id}')" class="${currentView === v.id ? 'bg-red-50 text-red-700' : 'text-gray-500 hover:text-gray-900'} px-3 py-2 rounded-md text-sm font-medium transition duration-150">
                    ${v.label}
                </button>
            `).join('');

            mobileContainer.innerHTML = views.map(v => `
                <button onclick="setView('${v.id}')" class="${currentView === v.id ? 'text-red-600 font-bold border-b-2 border-red-600' : 'text-gray-500'} flex-1 text-center text-xs uppercase tracking-wide px-2 py-3">
                    ${v.label}
                </button>
            `).join('');
        }
        
        function renderTools() {
            const container = document.getElementById('comm-cards-container');
            container.innerHTML = tripData.commCards.map((card, idx) => `
                <div onclick="showCard(${idx})" class="p-3 bg-gray-50 hover:bg-red-50 border border-gray-100 rounded-lg cursor-pointer transition flex justify-between items-center group">
                    <span class="text-sm text-gray-700 font-medium">${card.en}</span>
                    <span class="text-xs text-gray-400 group-hover:text-red-500">Show &rarr;</span>
                </div>
            `).join('');
        }

        function renderView() {
            const main = document.getElementById('main-content');
            main.innerHTML = ''; // Clear

            if (currentView === 'dashboard') renderDashboard(main);
            if (currentView === 'itinerary') renderItinerary(main);
            if (currentView === 'budget') renderBudget(main);
            if (currentView === 'checklist') renderChecklist(main);
        }

        // --- View Renderers ---

